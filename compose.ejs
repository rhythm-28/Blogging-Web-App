<%- include('partials/header.ejs') -%>

<h1> Compose </h1>
<form action="/compose" method="post">

  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class = "form-control" id="title" name="composeTitle" placeholder="Enter title">
  </div>

  <div class="form-group">
    <label for="post">Post</label>
    <textarea name="composeContent" class = "form-control" id="post" rows="8" cols="80" placeholder = "Start writing your post"></textarea>
  </div>

  <button type="submit" class="btn btn-primary" name="button">Publish</button>

</form>

